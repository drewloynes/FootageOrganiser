{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/**/*",
    "src/preload/**/*",
    "src/shared/**/*",
    "src/worker/**/**/**/*",
    "src/global/mainWorkerGlobals.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
     "moduleResolution": "bundler",
    "types": [
      "electron-vite/node"
    ],
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "src/shared/*"
      ],
      "@worker/*": [
        "src/worker/*"
      ],
      "@main/*": [
        "src/main/*"
      ]
    }
  }
}
